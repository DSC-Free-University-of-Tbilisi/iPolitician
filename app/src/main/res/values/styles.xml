<resources>
    <!-- Base application theme. -->
    <style name="LightMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundClr">@color/lightBackground</item>
        <item name="componentClr">@color/lightComponentColor</item>
        <item name="textClr">@color/lightTextColor</item>
        <item name="buttonColorStart">@color/lightButtonColorStart </item>
        <item name="buttonColorEnd">@color/lightButtonColorEnd </item>
    </style>

    <style name="DarkMode" parent="LightMode">
        <!-- Customize your theme here. -->
        <item name="backgroundClr">@color/darkBackground</item>
        <item name="componentClr">@color/darkComponentColor</item>
        <item name="textClr">@color/darkTextColor</item>

        <item name="buttonColorStart">@color/darkButtonColorStart </item>
        <item name="buttonColorEnd">@color/darkButtonColorEnd </item>
    </style>

    <style name="LightMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="android:textColor"> @color/darkButtonColorStart </item>
        <item name="colorControlActivated"> @color/darkButtonColorStart </item>
    </style>

</resources>